@page
@model RazorPagesMovie.Pages.Movies.EditModel

@{
    ViewData["Title"] = "Edit Movie";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-4">
        <i class="fas fa-edit me-2"></i>Edit Movie
    </h1>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">Update Movie Information</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="Movie.Id" />
                    <input type="hidden" asp-for="Movie.DateAdded" />
                    
                    <!-- Basic Information -->
                    <div class="row g-3 mb-4">
                        <div class="col-md-8">
                            <label asp-for="Movie.Title" class="form-label">
                                <i class="fas fa-film me-2"></i>@Html.DisplayNameFor(m => m.Movie.Title)
                            </label>
                            <input asp-for="Movie.Title" class="form-control form-control-lg" />
                            <span asp-validation-for="Movie.Title" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Movie.ReleaseDate" class="form-label">
                                <i class="fas fa-calendar me-2"></i>@Html.DisplayNameFor(m => m.Movie.ReleaseDate)
                            </label>
                            <input asp-for="Movie.ReleaseDate" class="form-control" type="date" />
                            <span asp-validation-for="Movie.ReleaseDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="Movie.Genre" class="form-label">
                                <i class="fas fa-tags me-2"></i>@Html.DisplayNameFor(m => m.Movie.Genre)
                            </label>
                            <input asp-for="Movie.Genre" class="form-control" />
                            <span asp-validation-for="Movie.Genre" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Movie.Rating" class="form-label">
                                <i class="fas fa-certificate me-2"></i>@Html.DisplayNameFor(m => m.Movie.Rating)
                            </label>
                            <select asp-for="Movie.Rating" class="form-select">
                                <option value="">Select Rating</option>
                                <option value="G">G</option>
                                <option value="PG">PG</option>
                                <option value="PG-13">PG-13</option>
                                <option value="R">R</option>
                                <option value="NC-17">NC-17</option>
                            </select>
                            <span asp-validation-for="Movie.Rating" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Movie.Price" class="form-label">
                                <i class="fas fa-dollar-sign me-2"></i>@Html.DisplayNameFor(m => m.Movie.Price)
                            </label>
                            <input asp-for="Movie.Price" class="form-control" step="0.01" />
                            <span asp-validation-for="Movie.Price" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Additional Details -->
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="Movie.Director" class="form-label">
                                <i class="fas fa-user-tie me-2"></i>@Html.DisplayNameFor(m => m.Movie.Director)
                            </label>
                            <input asp-for="Movie.Director" class="form-control" />
                            <span asp-validation-for="Movie.Director" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Movie.Duration" class="form-label">
                                <i class="fas fa-clock me-2"></i>@Html.DisplayNameFor(m => m.Movie.Duration)
                            </label>
                            <input asp-for="Movie.Duration" class="form-control" />
                            <span asp-validation-for="Movie.Duration" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Movie.ImdbRating" class="form-label">
                                <i class="fas fa-star me-2"></i>@Html.DisplayNameFor(m => m.Movie.ImdbRating)
                            </label>
                            <input asp-for="Movie.ImdbRating" class="form-control" step="0.1" />
                            <span asp-validation-for="Movie.ImdbRating" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="Movie.Language" class="form-label">
                                <i class="fas fa-language me-2"></i>@Html.DisplayNameFor(m => m.Movie.Language)
                            </label>
                            <input asp-for="Movie.Language" class="form-control" />
                            <span asp-validation-for="Movie.Language" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Movie.Country" class="form-label">
                                <i class="fas fa-globe me-2"></i>@Html.DisplayNameFor(m => m.Movie.Country)
                            </label>
                            <input asp-for="Movie.Country" class="form-control" />
                            <span asp-validation-for="Movie.Country" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Movie.Cast" class="form-label">
                            <i class="fas fa-users me-2"></i>@Html.DisplayNameFor(m => m.Movie.Cast)
                        </label>
                        <input asp-for="Movie.Cast" class="form-control" />
                        <span asp-validation-for="Movie.Cast" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Movie.Description" class="form-label">
                            <i class="fas fa-align-left me-2"></i>@Html.DisplayNameFor(m => m.Movie.Description)
                        </label>
                        <textarea asp-for="Movie.Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Movie.Description" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Movie.ImageUrl" class="form-label">
                            <i class="fas fa-image me-2"></i>@Html.DisplayNameFor(m => m.Movie.ImageUrl)
                        </label>
                        <input asp-for="Movie.ImageUrl" class="form-control" />
                        <span asp-validation-for="Movie.ImageUrl" class="text-danger"></span>
                        <div class="form-text">Optional: URL to movie poster image</div>
                    </div>

                    <div class="mb-4">
                        <div class="form-check">
                            <input asp-for="Movie.IsAvailable" class="form-check-input" />
                            <label asp-for="Movie.IsAvailable" class="form-check-label">
                                <i class="fas fa-check-circle me-2"></i>@Html.DisplayNameFor(m => m.Movie.IsAvailable)
                            </label>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                        <a asp-page="./Details" asp-route-id="@Model.Movie.Id" class="btn btn-info btn-lg">
                            <i class="fas fa-eye me-2"></i>View Details
                        </a>
                        <a asp-page="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <!-- Current Info Panel -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info me-2"></i>Current Information
                </h5>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.Movie.ImageUrl))
                {
                    <div class="text-center mb-3">
                        <img src="@Model.Movie.ImageUrl" alt="@Model.Movie.Title" class="img-fluid rounded" 
                             style="max-height: 200px; object-fit: cover;" 
                             onerror="this.style.display='none';">
                    </div>
                }
                
                <h6 class="fw-bold">@Model.Movie.DisplayTitle</h6>
                <p class="text-muted mb-2">Directed by @Model.Movie.Director</p>
                
                <div class="row g-2 text-center">
                    <div class="col-6">
                        <small class="text-muted">Duration</small>
                        <div><strong>@Model.Movie.GetFormattedDuration()</strong></div>
                    </div>
                    <div class="col-6">
                        <small class="text-muted">Rating</small>
                        <div><span class="badge bg-@Model.Movie.GetRatingColor()">@Model.Movie.Rating</span></div>
                    </div>
                </div>
                
                <hr>
                <small class="text-muted">
                    <i class="fas fa-calendar-plus me-1"></i>
                    Added: @Model.Movie.DateAdded.ToString("MMM dd, yyyy")
                </small>
                @if (Model.Movie.LastUpdated.HasValue)
                {
                    <br>
                    <small class="text-muted">
                        <i class="fas fa-edit me-1"></i>
                        Last updated: @Model.Movie.LastUpdated.Value.ToString("MMM dd, yyyy")
                    </small>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
